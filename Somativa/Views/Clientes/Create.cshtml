@model Somativa.Models.Cliente

@{
    ViewData["Title"] = "Adicionar";
}

<h1 class="text-center mt-5" style="font-family: 'Cantata One';">Adicionar Clientes</h1>
<hr />

<div class="row">
    <div class="col-md-4 m-auto align-items-center">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label" style="font-family: 'Cantata One';"></label>
                <input asp-for="Nome" class="form-control form-control-lg" style="background-color: #D9EACC;" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Endereco" class="control-label" style="font-family: 'Cantata One';"></label>
                <input asp-for="Endereco" class="form-control form-control-lg" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Telefone" class="control-label" style="font-family: 'Cantata One';"></label>
                <input asp-for="Telefone" class="form-control form-control-lg" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Cpf" class="control-label" style="font-family: 'Cantata One';"></label>
                <input asp-for="Cpf" class="form-control form-control-lg" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Email" class="control-label" style="font-family: 'Cantata One';"></label>
                <input asp-for="Email" class="form-control form-control-lg" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Nascimento" class="control-label" style="font-family: 'Cantata One';"></label>
                <input asp-for="Nascimento" type="date" class="form-control form-control-lg" />
                <span asp-validation-for="Nascimento" class="text-danger"></span>
            </div>

            <div class="d-flex mt-4 justify-content-center">
                <div class="form-group me-3">
                    <input type="submit" value="Adicionar" class="btn text-white" style="font-family: 'Cantata One'; background-color: #379747; border-radius: 15px 15px 15px 15px; width: 140px; height: 50px;" />
                </div>
                <div class="form-group ms-3">
                    <a asp-action="Index" class="btn text-white d-flex justify-content-center align-items-center" style="font-family: 'Cantata One'; background-color: #F82D2D; border-radius: 15px 15px 15px 15px; width: 140px; height: 50px;">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
