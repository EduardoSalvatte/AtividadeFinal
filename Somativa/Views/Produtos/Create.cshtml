@model Somativa.Models.Produto

@{
    ViewData["Title"] = "Adicionar";
}

<h1 class="text-center mt-5" style="font-family: 'Cantata One';">Adicionar Clientes</h1>
<hr />

<div class="row">
    <div class="col-md-4 m-auto align-items-center">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label" style="font-family: 'Cantata One';"></label>
                <input asp-for="Nome" class="form-control form-control-lg" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <label asp-for="Estoque" class="control-label" style="font-family: 'Cantata One';"></label>
                <input asp-for="Estoque" class="form-control form-control-lg" />
                <span asp-validation-for="Estoque" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Preco" class="control-label" style="font-family: 'Cantata One';"></label>
                <input asp-for="Preco" type="number" step=".01" class="form-control form-control-lg" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="CategoriaId" class="control-label" style="font-family: 'Cantata One';"></label>
                <select asp-for="CategoriaId" class="form-control form-control-lg" asp-items="ViewBag.CategoriaId"></select>
            </div>
            <div class="form-group mt-2">
                <label asp-for="FornecedorId" class="control-label" style="font-family: 'Cantata One';"></label>
                <select asp-for="FornecedorId" class="form-control form-control-lg" asp-items="ViewBag.FornecedorId"></select>
            </div>


            <!-- Adicionando campo de seleção de imagem -->
            <div class="form-group mt-2">
                <label asp-for="Imagem" class="control-label" style="font-family: 'Cantata One';"></label>
                <div class="form-floating">
                    <input asp-for="Imagem" name="imgUp" type="file" class="form-control" placeholder="" />
                    <span asp-validation-for="Imagem" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex mt-4 justify-content-center">
                <div class="form-group me-3">
                    <input type="submit" value="Adicionar" class="btn text-white" style="font-family: 'Cantata One'; background-color: #379747; border-radius: 15px 15px 15px 15px; width: 140px; height: 50px;" />
                </div>
                <div class="form-group ms-3">
                    <a asp-action="Index" class="btn text-white d-flex justify-content-center align-items-center" style="font-family: 'Cantata One'; background-color: #F82D2D; border-radius: 15px 15px 15px 15px; width: 140px; height: 50px;">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}