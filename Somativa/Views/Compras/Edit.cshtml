@model Somativa.Models.Compra

@{
    ViewData["Title"] = "Editar";
}

<h1 class="text-center mt-5" style="font-family: 'Cantata One';">Editar Cliente</h1>
<hr />

<div class="row">
    <div class="col-md-4 m-auto align-items-center">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CompraId" />
            <div class="form-group">
                <label asp-for="Nota" class="control-label"></label>
                <input asp-for="Nota" class="form-control form-control-lg" />
                <span asp-validation-for="Nota" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="DataHora" class="control-label"></label>
                <input asp-for="DataHora" class="form-control form-control-lg" />
                <span asp-validation-for="DataHora" class="text-danger"></span>
            </div>
            <div class="d-flex mt-4 justify-content-center">
                <div class="form-group me-3">
                    <input type="submit" value="Editar" class="btn text-white" style="font-family: 'Cantata One'; background-color: #379747; border-radius: 15px 15px 15px 15px; width: 140px; height: 50px;" />
                </div>
                <div class="form-group ms-3">
                    <a asp-action="Index" class="btn text-white d-flex justify-content-center align-items-center" style="font-family: 'Cantata One'; background-color: #F82D2D; border-radius: 15px 15px 15px 15px; width: 140px; height: 50px;">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
