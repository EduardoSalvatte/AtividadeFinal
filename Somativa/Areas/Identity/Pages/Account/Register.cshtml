@page
@model RegisterModel
@{
    ViewData["Title"] = "Cadastrar";
}

<div class="row mt-5">
    <div class="col-md-4 m-auto">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h1 class="text-center" style="font-family: 'Cantata One';">@ViewData["Title"]</h1>
            <hr />

            <div class="text-center mb-4">
                <img src="~/img/FotoCinza.png" alt="Foto Cinza" class="img-fluid" style="max-width: 50%; max-height: 50%;" />
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <div class="input-group">
                    <span class="input-group-text">
                        <svg bootstrap-icon="Envelope" width="30" height="30" aria-label="Curtir" class="m-2"></svg>
                    </span> 
                    <input asp-for="Input.Email" style="font-family: 'Cantata One';" class="form-control" autocomplete="username" aria-required="true" placeholder="E-mail" />
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <div class="input-group">
                    <span class="input-group-text">
                        <svg bootstrap-icon="LockFill" width="30" height="30" aria-label="Curtir" class="m-2"></svg>
                    </span>
                    <input asp-for="Input.Password" style="font-family: 'Cantata One';" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Senha" />
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <div class="input-group">
                    <span class="input-group-text">
                        <svg bootstrap-icon="LockFill" width="30" height="30" aria-label="Curtir" class="m-2"></svg>
                    </span>
                    <input asp-for="Input.ConfirmPassword" style="font-family: 'Cantata One';" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirmar Senha" />
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-center mt-4">
                <button id="registerSubmit" type="submit" class="btn btn-success text-white" style="font-family: 'Cantata One'; width: 220px; height: 60px; background-color: #6BA083; margin: auto; border-radius: 15px 15px 15px 15px;">ENTRAR</button>
            </div>

            <div class="d-flex justify-content-center mt-2 m-3">
                <svg bootstrap-icon="Facebook" width="30" height="30" aria-label="Curtir" class="m-2" style="color: #4581FB; outline: none;"></svg>
                <svg bootstrap-icon="Google" width="30" height="30" aria-label="Curtir" class="m-2" style="color: #F94738; outline: none;"></svg>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
